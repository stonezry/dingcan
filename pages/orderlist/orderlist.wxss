.go-center{
  display: flex;
  justify-content: center;
}
.go-center-v{
  display: flex;
  flex-direction: column;
  align-items: center
}
.active-color{
  background: #FF9C35;
  padding-top: 5px;
  padding-bottom: 5px;
  border-left: 1px solid white;
}
.unactive-color{
  background: #999999;
  padding-top: 5px;
  padding-bottom: 5px;
  border-left: 1px solid white;
}

.note-btn{
  font-size:14px;
  color:grey;
  margin-top:30px
}
.dindgan-i{
  font-size:100px;
  color:grey;
}
.tab-box{
  width:60%;
  display:flex;
  font-size:14px;
  color:white
}


.list-menu{
  font-size:28rpx;
  height: 1200rpx;
}

.item-top{
  padding:25rpx 10rpx 10rpx 25rpx;
  display: flex;
  align-items: center;
}
.order-name{
  color: black;
  font-size: 35rpx;
  flex: 1;
}
.pay-right{
  display: flex;
  flex-direction: row;
  color: #666666;
  font-size: 30rpx;
  align-items: center;
  justify-content: flex-end;
}
.pay-right-money{
  color:red;
  font-size: 40rpx;
  margin-left: 15rpx;
  margin-right: 60rpx;
}

.btn{
  width: 30%;
  font-size: 30rpx;
  background: #FF9C35;
  margin-top: 15rpx;
  margin-bottom: 25rpx;
  color: white;
  align-content: center
}
.content-list{
  border-bottom:5px solid #E3E3E3;
}